// valor_absoluto.cpp : Defines the entry point for the console application.
//



#include "stdafx.h"
#include<iostream>
#include"conio.h"

using namespace std;

int main() {
	int numero;

	cout << "Ingrese el valor de numero: ";
	cin >> numero;

	if (numero<0.0)
		numero= -numero;


	cout << "Valor de absoluto: " << numero << endl;
	getch();
	return 0;
}
