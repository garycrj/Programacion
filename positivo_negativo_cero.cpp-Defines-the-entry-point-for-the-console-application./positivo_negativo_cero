#include "stdafx.h"
#include<iostream>
#include"conio.h"

using namespace std;

int main() {
	int numero;
	cout << "Ingrese el numero: ";
	cin >> numero;
	if (numero<0.0)
		cout << "El numero es negativo" << endl;
	    if (numero==0)
			cout << "El numero es cero"
	  else
		cout << "El numero es positivo" << endl;
	getch():
	return 0;
}
