// positivo_negativo.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include<iostream>
#include"conio.h"

using namespace std;

int main() {
	int numero;
	cout << "Ingrese el numero: ";
	cin >> numero;
	if (numero<0.0) 
		cout << "El numero es negativo" << endl;
	  else 
		cout << "El numero es positivo" << endl;
	
	getch():
	return 0;
}
